<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Nom : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_pharmacie_nom"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:padding="20dip" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:padding="-20dip"
            android:text="Ville :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_pharmacie_ville"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:padding="20dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:padding="-20dip"
            android:text="Coord. : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_pharmacie_telephone"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:padding="20dip" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:padding="-20dip"
            android:text="Télécop. :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_pharmacie_telecopie"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:padding="20dip" />

    </LinearLayout>
    <Button
        android:id="@+id/activity_main_pharmacie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Localiser" />


</LinearLayout>