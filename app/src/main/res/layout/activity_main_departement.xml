<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    tools:ignore="ExtraText"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_Departement_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dip"
        android:text="Large Text"
        />

    <TextView
        android:id="@+id/activity_main_Departement_code"
        android:layout_toRightOf="@id/activity_main_Departement_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:layout_weight="1"
        android:text="Large Text"
        />


    <Button
        android:id="@+id/activity_main_Departement_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="1dip"
        android:text="Visualiser"
        />

</LinearLayout>